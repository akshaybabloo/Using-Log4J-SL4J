<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="LOG4JSL4J">
    <Appenders>
        <File name="MyFile" fileName="${sys:LOG4JSL4J}">
            <PatternLayout>
                <Pattern>%d %p [%t] %c{2} - %m%n</Pattern>
            </PatternLayout>
        </File>
<!--        <File name="MyFile2" fileName="test.html">
            <HTMLLayout>
                <title>LOG4JSL4J-log</title>
            </HTMLLayout>
            <PatternLayout>
                <Pattern>%d %p [%t] %c{2} - %m%n</Pattern>
            </PatternLayout>
        </File>-->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} %-5level %logger{36}.%M() @%L - %msg%n}{FATAL=red blink, ERROR=red, WARN=yellow bold, INFO=black, DEBUG=green bold, TRACE=blue}"/>
        </Console>
        <Async name="Async">
            <AppenderRef ref="MyFile"/>
            <!--<AppenderRef ref="MyFile2"/>-->
        </Async>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="Async"/>
        </Root>
    </Loggers>
</Configuration>
